
@{
    ViewBag.Title = "Signup";
    string hasUser = ViewBag.hasUser;
    Layout = "~/Views/Shared/_LayoutWeb.cshtml";
}
<section class="checkout spad">
    <div class="container">
        <h2 class="text-center mt-2">ĐĂNG KÝ</h2>
        <form action="/KhachHang/Signup" method="post" class="checkout__form">
            <div class="row mt-3">
                <div class="col-lg-12">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="checkout__form__input">
                                <p>Họ <span>*</span></p>
                                <input type="text" name="txtHo" />
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="checkout__form__input">
                                <p>Tên <span>*</span></p>
                                <input type="text" name="txtTen" />
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="checkout__form__input">
                                <p>Tên tài khoản <span>*</span></p>
                                <input type="text" name="txtUsername" placeholder="Username" />
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="checkout__form__input">
                                <p>Mật khẩu :<span>*</span></p>
                                <input type="password" name="txtPassword" placeholder="Nhập mật khẩu" />
                            </div>

                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="checkout__form__input">
                                <p>Số Điện Thoại <span>*</span></p>
                                <input type="text" name="txtPhone" />
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="checkout__form__input">
                                <p>Email <span>*</span></p>
                                <input type="text" name="txtEmail" placeholder="Vd: trandongpy@gmail.com" />
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="checkout__form__input">
                                <p>Quê quán <span>*</span></p>
                                <input type="text" name="txtQueQuan" placeholder="Việt Nam" />
                            </div>
                            <div class="checkout__form__input">
                                <p>Thành Phố <span>*</span></p>
                                <input type="text" name="txtCity" placeholder="TP. HCM" />
                            </div>
                            <div class="checkout__form__input">
                                <p>Địa Chỉ <span>*</span></p>
                                <input type="text" name="txtAddress" placeholder="Địa chỉ nơi ở hoặc nhà riêng" />
                            </div>
                        </div>
                        <div class="col-lg-12 text-center"><button type="submit" class="btn btn-danger" id="btnRegister">Đăng Ký</button></div>
                        
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>
